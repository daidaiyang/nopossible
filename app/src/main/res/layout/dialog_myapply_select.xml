<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rect_circle_x19_ceb_top"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialog_myapply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x31"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_black"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginBottom="@dimen/x35"
        android:text="选择品类"/>
    
    <ImageView
        android:id="@+id/dialog_myapply_close"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/x18"
        android:paddingRight="@dimen/x20"
        android:paddingLeft="@dimen/x20"
        android:paddingBottom="@dimen/x15"
        android:src="@drawable/close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x106"
        android:layout_marginBottom="@dimen/x38"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/line_f2"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:id="@+id/dialog_myapply_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>