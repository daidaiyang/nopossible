<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/x28"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/confirmorder_item_img"
            android:layout_width="@dimen/x123"
            android:layout_height="@dimen/y123"
            android:layout_marginTop="@dimen/x38"
            android:layout_marginLeft="@dimen/x23"
            android:layout_marginBottom="@dimen/x38"
            android:src="@color/colorPrimary"/>

        <TextView
            android:id="@+id/confirmorder_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x171"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/x48"
            android:textSize="@dimen/x27"
            android:textColor="@color/text_black"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="家乐鸡精替代味精增鲜提味450g*2袋装家乐鸡精替代味精增鲜提味450g*2袋装"/>

        <TextView
            android:id="@+id/confirmorder_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize23"
            android:textColor="@color/text_price"
            android:layout_marginLeft="@dimen/x169"
            android:layout_marginTop="@dimen/y132"
            android:includeFontPadding="false"
            android:text="￥25.80"/>


        <TextView
            android:id="@+id/confirmorder_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x23"
            android:textColor="@color/text_black"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/y132"
            android:includeFontPadding="false"
            android:text="x5"/>
    </RelativeLayout>

    <View
        android:id="@+id/confirmorder_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/line_ee"/>

</LinearLayout>