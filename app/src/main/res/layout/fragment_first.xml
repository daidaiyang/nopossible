<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_back"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/first_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y84"
            android:background="@color/white">

            <ImageView
                android:id="@+id/first_location_icon"
                android:layout_width="@dimen/x31"
                android:layout_height="@dimen/y31"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x23"
                android:scaleType="centerInside"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/first_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x61"
                android:text="中航城市广场"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/first_record_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100"
            android:text="长按说话"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/textSize27" />

        <TextView
            android:id="@+id/first_record_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/text_black_33"
            android:text="搜索您要购买的商品"
            android:textSize="@dimen/textSize27" />

        <ImageView
            android:id="@+id/first_record_low_icon"
            android:layout_width="@dimen/x23"
            android:layout_height="@dimen/x23"
            android:layout_marginTop="@dimen/x49"
            android:src="@drawable/jiatou_xia" />

        <FrameLayout
            android:layout_width="@dimen/x402"
            android:layout_height="@dimen/y402"
            android:layout_marginTop="@dimen/x30">
            <com.nopossible.customview.WaveView
                android:id="@+id/first_record_icon"
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y400"
                android:layout_gravity="center"
                />
            <com.nopossible.customview.CircleImageView
                android:visibility="gone"
                android:id="@+id/first_record_circle"
                android:layout_width="@dimen/x320"
                android:layout_height="@dimen/x320"
                android:layout_gravity="center"
                android:background="@drawable/circle"/>
            <ImageView
                android:id="@+id/first_record_icon_img"
                android:layout_width="@dimen/x288"
                android:layout_height="@dimen/x288"
                android:layout_gravity="center"
                android:src="@drawable/record_button"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y90"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/first_function_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x60"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/first_function_scan_icon"
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:src="@drawable/scan"/>

                <TextView
                    android:id="@+id/first_function_scan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:textSize="@dimen/textSize27"
                    android:textColor="@color/text_black"
                    android:text="扫码找货" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_function_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/first_function_order_icon"
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:src="@drawable/payorder"
                     />

                <TextView
                    android:id="@+id/first_function_order_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:textSize="@dimen/textSize27"
                    android:textColor="@color/text_black"
                    android:text="一键下单" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>