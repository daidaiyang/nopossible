<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/first_back">
        <ImageView
            android:layout_width="@dimen/x173"
            android:layout_height="@dimen/y173"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y104"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/findpass_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y411"
            android:orientation="vertical">

            <EditText
                android:id="@+id/findpass_step1_username"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_circle_x42_cc_kuang"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/x58"
                android:textColorHint="@color/text_black_cc"
                android:textSize="@dimen/textSize27" />

            <LinearLayout
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y38"
                android:background="@drawable/rect_circle_x42_cc_kuang"
                >

                <EditText
                    android:id="@+id/findpass_step1_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <TextView
                    android:id="@+id/findpass_step1_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x58"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="获取验证码"
                    android:textColor="@color/text_black_0f"
                    android:textSize="@dimen/textSize27" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/findpass_step2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y411"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_circle_x42_cc_kuang">

                <EditText
                    android:id="@+id/findpass_step2_pass"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <CheckBox
                    android:id="@+id/findpass_step2_pass_cansee"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x26"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x38"
                    android:background="@drawable/selector_show_hide"
                    android:button="@null"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y38"
                android:background="@drawable/rect_circle_x42_cc_kuang">

                <EditText
                    android:id="@+id/findpass_step2_pass_again"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <CheckBox
                    android:id="@+id/findpass_step2_pass_cansee_again"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x26"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x38"
                    android:background="@drawable/selector_show_hide"
                    android:button="@null"
                    android:checked="false" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/findpass_next"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y84"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y676"
            android:background="@drawable/rect_circle_x42_cc"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize31" />
    </RelativeLayout>

</LinearLayout>