<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x84"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/title_back"
        android:layout_width="@dimen/x59"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x27"
        android:scaleType="centerInside"
        android:src="@drawable/jiantou_back"
        />


    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品详情"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textSize35"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />
    
    <ImageView
        android:id="@+id/title_right"
        android:layout_width="@dimen/x38"
        android:layout_height="@dimen/x38"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x27"
        android:src="@drawable/share"
        />

</RelativeLayout>