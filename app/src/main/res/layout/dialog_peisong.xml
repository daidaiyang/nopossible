<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ceb"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y106"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize31"
            android:textColor="@color/text_black"
            android:text="选择配送商家"/>
        
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x23"
            android:src="@drawable/close"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/line_f2"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/select_others"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/text_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x38"
            android:text="不选择商家，让附近商家抢单"/>
        
        <RadioButton
            android:id="@+id/select_others_rb"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y35"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x38"
            android:background="@drawable/selector_checkbox_circle"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/line_f2"/>
    
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y84"
        android:background="@color/text_black_0f"
        android:textSize="@dimen/textSize31"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="确定"/>
    

</LinearLayout>