<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/first_back">

        <ImageView
            android:layout_width="@dimen/x173"
            android:layout_height="@dimen/y173"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y104"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/register_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y411"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_username"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_circle_x42_cc_kuang"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="number"
                android:singleLine="true"
                android:paddingLeft="@dimen/x58"
                android:textColorHint="@color/text_black_cc"
                android:textSize="@dimen/textSize27" />

            <LinearLayout
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y38"
                android:background="@drawable/rect_circle_x42_cc_kuang"
                >

                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <TextView
                    android:id="@+id/register_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x58"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="获取验证码"
                    android:textColor="@color/text_black_0f"
                    android:textSize="@dimen/textSize27" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/register_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y411"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/register_input_password"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_circle_x42_cc_kuang">

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <CheckBox
                    android:id="@+id/register_seepassword"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x26"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x38"
                    android:background="@drawable/selector_show_hide"
                    android:button="@null"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_input_password_again"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y84"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y38"
                android:background="@drawable/rect_circle_x42_cc_kuang">

                <EditText
                    android:id="@+id/register_password_again"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y84"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请再次输入密码"
                    android:paddingLeft="@dimen/x58"
                    android:textColorHint="@color/text_black_cc"
                    android:textSize="@dimen/textSize27" />

                <CheckBox
                    android:id="@+id/register_seepassword_again"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x26"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x38"
                    android:background="@drawable/selector_show_hide"
                    android:button="@null"
                    android:checked="false" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/register_next"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y84"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y676"
            android:background="@drawable/rect_circle_x42_cc"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize31" />

        <LinearLayout
            android:id="@+id/register_agreement_ll"
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y802"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_checked"
                android:layout_width="@dimen/x27"
                android:layout_height="@dimen/y27"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:includeFontPadding="false"
                android:text="我已阅读"
                android:textColor="@color/text_black_99"
                android:textSize="@dimen/textSize23" />

            <TextView
                android:id="@+id/register_register_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="《注册协议》"
                android:textColor="@color/text_black_0f"
                android:textSize="@dimen/textSize23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="和"
                android:textColor="@color/text_black_99"
                android:textSize="@dimen/textSize23" />

            <TextView
                android:id="@+id/register_secret_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="《隐私协议》"
                android:textColor="@color/text_black_0f"
                android:textSize="@dimen/textSize23" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x117"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号？"
                android:textColor="@color/text_black_66"
                android:textSize="@dimen/textSize23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/text_black_0f"
                android:textSize="@dimen/textSize23" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>