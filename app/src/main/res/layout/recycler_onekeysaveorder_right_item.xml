<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y190"
    android:background="@color/back_ceb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x23"
        android:layout_marginRight="@dimen/x25"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="@dimen/x123"
            android:layout_height="@dimen/y123"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rightitem_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary" />

            <CheckBox
                android:id="@+id/rightitem_selected"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/x1"
                android:background="@drawable/selector_checkbox_circle_none"
                android:button="@null"
                android:checked="true" />
        </FrameLayout>

        <TextView
            android:id="@+id/rightitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x145"
            android:layout_marginTop="@dimen/x42"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="克莉娜橄榄油3L家庭装炒菜食用油西班牙原油进口克莉娜橄榄油3L家庭装炒菜食用油西班牙原油进口"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textSize23" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x31">

            <TextView
                android:id="@+id/rightitem_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x145"
                android:includeFontPadding="false"
                android:text="￥324.00"
                android:textColor="@color/text_price"
                android:textSize="@dimen/x31" />


            <RelativeLayout
                android:layout_width="@dimen/x155"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rightitem_sub"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:src="@drawable/sub" />

                <TextView
                    android:id="@+id/rightitem_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textSize31" />

                <ImageView
                    android:id="@+id/rightitem_plus"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/plus" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginLeft="@dimen/x23"
        android:layout_marginRight="@dimen/x23"
        android:background="@color/line_dd" />


</LinearLayout>