<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x38"
            android:layout_marginBottom="@dimen/x19"
            android:layout_marginLeft="@dimen/x19"
            android:textSize="@dimen/textSize23"
            android:textColor="@color/text_black"
            android:text="原密码"/>
        
        <EditText
            android:id="@+id/oldpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x77"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x19"
            android:inputType="textPassword"
            android:hint="请输入当前密码"
            android:paddingLeft="@dimen/x15"
            android:textSize="@dimen/textSize27"
            android:background="@drawable/rect_cc_kuang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x38"
            android:layout_marginBottom="@dimen/x19"
            android:layout_marginLeft="@dimen/x19"
            android:textSize="@dimen/textSize23"
            android:textColor="@color/text_black"
            android:text="新密码(密码需6位数字以上，包含字母和数字)"/>

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x77"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x19"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/x15"
            android:textSize="@dimen/textSize27"
            android:background="@drawable/rect_cc_kuang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x38"
            android:layout_marginBottom="@dimen/x19"
            android:layout_marginLeft="@dimen/x19"
            android:textSize="@dimen/textSize23"
            android:textColor="@color/text_black"
            android:text="确认新密码"/>

        <EditText
            android:id="@+id/newpassword_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x77"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x19"
            android:hint="请再次输入新密码"
            android:paddingLeft="@dimen/x15"
            android:inputType="textPassword"
            android:textSize="@dimen/textSize27"
            android:layout_marginBottom="@dimen/x38"
            android:background="@drawable/rect_cc_kuang"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/back_ceb">
        <TextView
            android:id="@+id/confirm"
            android:layout_width="@dimen/x499"
            android:layout_height="@dimen/y84"
            android:layout_marginTop="@dimen/x154"
            android:layout_centerHorizontal="true"
            android:text="确定修改"
            android:textSize="@dimen/textSize31"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rect_circle_x42_0f"/>
    </RelativeLayout>
</LinearLayout>