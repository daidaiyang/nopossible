<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y84"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单管理"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x35"
            android:textColor="@color/text_black"
            />
        
        <ImageView
            android:id="@+id/ordermanage_search"
            android:layout_width="@dimen/x65"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/x27"
            android:layout_centerVertical="true"

            android:src="@drawable/search"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/ordermanage_rg"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x85"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ordermanage_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="全部"
            android:gravity="center"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/selector_text_ff66"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/ordermanage_unpay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="待付款"
            android:gravity="center"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/selector_text_ff66"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/ordermanage_unget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="待收货"
            android:gravity="center"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/selector_text_ff66"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/ordermanage_unsay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="待评价"
            android:gravity="center"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/selector_text_ff66"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/ordermanage_finish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="已完成"
            android:gravity="center"
            android:textSize="@dimen/textSize27"
            android:textColor="@color/selector_text_ff66"
            android:button="@null"/>
    </RadioGroup>

    <include
        android:visibility="gone"
        layout="@layout/include_empty_order"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/back_ceb">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ordermanage_recy"
            android:paddingTop="@dimen/x20"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>