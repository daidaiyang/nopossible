<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/first_back"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/x173"
            android:layout_height="@dimen/y173"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y104"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y84"
            android:background="@drawable/rect_circle_x42_cc_kuang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y411"
            android:hint="请输入手机号"
            android:textColorHint="@color/text_black_cc"
            android:paddingLeft="@dimen/x58"
            android:textSize="@dimen/textSize27"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="@dimen/x500"
            android:background="@drawable/rect_circle_x42_cc_kuang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y534"
            android:layout_height="@dimen/y84">
            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y84"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="@color/text_black_cc"
                android:paddingLeft="@dimen/x58"
                android:textSize="@dimen/textSize27"
                />
            
            <CheckBox
                android:id="@+id/login_seepassword"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x26"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x38"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/selector_show_hide"
                />
            
        </LinearLayout>
        <TextView
            android:id="@+id/login_login"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y84"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_circle_x42_cc"
            android:layout_marginTop="@dimen/y676"
            android:text="登录"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/textSize31"
            />
        <RelativeLayout
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y799"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速注册"
                android:textSize="@dimen/textSize23"
                android:textColor="@color/text_black_66"
                />
            <TextView
                android:id="@+id/login_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize23"
                android:textColor="@color/text_black_66"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>