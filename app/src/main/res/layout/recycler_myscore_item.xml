<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/x15"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_score_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textSize31"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        android:includeFontPadding="false"
        android:text="交易奖励"/>

    <TextView
        android:id="@+id/item_score_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize23"
        android:textColor="@color/text_black_99"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/x34"
        android:layout_marginRight="@dimen/x27"
        android:includeFontPadding="false"
        android:text="2018-11-15 15:14:44"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginTop="@dimen/x84"
        android:background="@color/line_dd"/>
    <TextView
        android:id="@+id/item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/text_price0c"
        android:layout_marginTop="@dimen/y119"
        android:layout_marginLeft="@dimen/x27"
        android:includeFontPadding="false"
        android:text="+2,325"/>
    <TextView
    android:layout_toRightOf="@id/item_score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/textSize23"
    android:textColor="@color/text_black"
    android:layout_marginTop="@dimen/y119"
    android:includeFontPadding="false"
    android:layout_alignBaseline="@id/item_score"
    android:text="积分"/>

    <TextView
        android:id="@+id/item_leftScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y119"
        android:layout_alignParentEnd="true"
        android:includeFontPadding="false"
        android:layout_marginBottom="@dimen/x31"
        android:text="2,325"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize23"
        android:textColor="@color/text_black"
        android:layout_marginTop="@dimen/y119"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@id/item_leftScore"
        android:layout_alignBaseline="@id/item_leftScore"
        android:layout_marginBottom="@dimen/x31"
        android:text="余"/>

</RelativeLayout>