<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/back_ceb"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:paddingTop="@dimen/x20"
        android:background="@drawable/rect_circle_x19_white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x19"
            android:layout_height="@dimen/y84">
            <ImageView
                android:id="@+id/item_avar"
                android:layout_width="@dimen/x31"
                android:layout_height="@dimen/y31"
                android:src="@color/colorPrimary"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize25"
                android:textColor="@color/text_black"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x61"
                android:text="柴火大院"/>

            <TextView
                android:id="@+id/item_statusInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize25"
                android:textColor="@color/text_price"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="等待买家付款"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@color/line_f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x30"
            android:paddingBottom="@dimen/y38"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x19"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/item_img1"
                android:layout_width="@dimen/x123"
                android:layout_height="@dimen/y123"
                android:layout_marginRight="@dimen/x12"
                android:src="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/item_img2"
                android:layout_width="@dimen/x123"
                android:layout_height="@dimen/y123"
                android:layout_marginRight="@dimen/x12"
                android:src="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/item_img3"
                android:layout_width="@dimen/x123"
                android:layout_height="@dimen/y123"
                android:layout_marginRight="@dimen/x12"
                android:src="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/item_img4"
                android:layout_width="@dimen/x123"
                android:layout_height="@dimen/y123"
                android:layout_marginRight="@dimen/x12"
                android:src="@color/colorPrimary"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x19"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize31"
                android:textColor="@color/text_price"
                android:includeFontPadding="false"
                android:text="￥324.00"/>

            <TextView
                android:id="@+id/item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize23"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@id/item_price"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:text="共5件"/>


            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize21"
                android:layout_alignParentEnd="true"
                android:text="2019.01.01 16:33:33"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginTop="@dimen/x29"
            android:background="@color/line_f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x19"
            android:layout_height="@dimen/y108">

            <TextView
                android:id="@+id/item_leftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="剩余45分钟"/>

            <TextView
                android:id="@+id/item_again"
                android:layout_width="@dimen/x134"
                android:layout_height="@dimen/x54"
                android:gravity="center"
                android:textSize="@dimen/x23"
                android:textColor="@color/text_price0c"
                android:background="@drawable/rect_circle_x23_0c_kuang"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/x175"
                android:layout_centerVertical="true"
                android:text="再来一单"/>

            <TextView
                android:id="@+id/item_operation"
                android:layout_width="@dimen/x134"
                android:layout_height="@dimen/x54"
                android:gravity="center"
                android:textSize="@dimen/x23"
                android:textColor="@color/white"
                android:background="@drawable/rect_circle_x23_0c"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="立即付款"/>
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>